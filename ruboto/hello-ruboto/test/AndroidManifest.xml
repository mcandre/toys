<?xml version='1.0' encoding='UTF-8'?>
<!-- package name must be unique so suffix with "tests" so package loader doesn't ignore us -->
<manifest package='us.yellosoft.helloruboto.tests' xmlns:android='http://schemas.android.com/apk/res/android' android:versionName='1.0' android:versionCode='1'>
    <!-- We add an application tag here just so that we can indicate that
         this package needs to link against the android.test library,
         which is needed when building test cases. -->
    <application android:icon='@drawable/ic_launcher'>
        <uses-library android:name='android.test.runner'/>
    </application>
    <!--
    This declares that this application uses the instrumentation test runner targeting
    the package of us.yellosoft.helloruboto.  To run the tests use the command:
    "adb shell am instrument -w us.yellosoft.helloruboto.tests/android.test.InstrumentationTestRunner"
    -->
    <instrumentation android:label='Tests for us.yellosoft.helloruboto' android:name='org.ruboto.test.InstrumentationTestRunner' android:targetPackage='us.yellosoft.helloruboto'/>
</manifest>