guard :shell do
  watch("Gemfile") do |m|
    title = "Bundler output"
    msg = "Bundler Failure"
    status = :failed

    if system("bundle")
      msg = "Bundled"
      status = :status
    end

    n msg, title, status

    "-> #{msg}"
  end

  watch(/checkstyle\.xml|.*\.java/) do |m|
    title = "Lint output"
    msg = "Lint failure"
    status = :success

    msg = `checkstyle -c checkstyle.xml **/*.java`

    n msg, title, status

    "-> #{msg}"
  end
end
